# Ustawienia domeny
DOMAIN_NAME=localhost

# Frontend
FRONTEND_PORT=3000

# API Gateway
API_GATEWAY_PORT=3001
API_GATEWAY_SECRET=api-gateway-secret

# Keycloak
KEYCLOAK_PORT=8080
KEYCLOAK_ADMIN_USER=admin
KEYCLOAK_ADMIN_PASSWORD=admin123
KEYCLOAK_REALM=whattodo

# PostgreSQL - te hasła są używane do połączenia przez aplikacje
POSTGRES_DB=tododb
POSTGRES_USER=todoapp
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_PASSWORD=postgres_secret_password # To hasło musi być takie samo jak w pliku ./secrets/postgres_password.txt

# MongoDB - te hasła są używane do połączenia przez aplikacje
MONGO_DB=tododb
MONGO_USER=todoapp
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_PASSWORD=mongo_secret_password # To hasło musi być takie samo jak w pliku ./secrets/mongo_password.txt
# MONGO_AUTH_SOURCE=admin # Często potrzebne, jeśli użytkownik jest w bazie admin

# API Services Ports
TASKS_API_PORT=3100
ERROR_SERVICE_PORT=3400

# Node Environment
NODE_ENV=development

# Session Secrets (dla API Gateway i potencjalnie frontendu jeśli używa sesji backendowych)
SESSION_SECRET=api-gateway-secret
API_GATEWAY_M2M_CLIENT_ID=api-gateway
API_GATEWAY_M2M_CLIENT_SECRET=api-gateway-secret